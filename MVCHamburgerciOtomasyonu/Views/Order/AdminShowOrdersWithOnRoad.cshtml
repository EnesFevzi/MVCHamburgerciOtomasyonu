@model List<OrderDto>
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Sipariş Yönetimi /</span> Sipariş
    </h4>
    <div class="card">
        <div class="table-responsive text-nowrap m-5">

            <table class="table table-bordered" id="portfoliosTable" width="100%" cellspacing="0">
                <thead>
                    <tr>

                        <th>Başlık</th>
                        <th>Fiyatı</th>
                        <th>Boyutu</th>
                        <th>Ekstralar</th>
                        <th>Sipariş Tarihi</th>
                        <th>Durum</th>
                        <th>İşlemler</th>

                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr name="@item.OrderID">

                            <td>@item.Menu.Name</td>
                            <td>@item.Price</td>
                            <td>@item.MenuSize.SizeName</td>
                            <td>
                                @foreach (var extra in item.Extras)
                                {
                                    <option>@extra.Name</option>

                                }
                            </td>
                            <td>@item.CreatedDate.ToShortTimeString()</td>
                            <td>@item.Status</td>

                            <td>

                                <a class="btn btn-primary btn-sm" data-id="@item.OrderID" asp-controller="Order" asp-action="UpdateStatusCompleted" asp-route-orderId="@item.OrderID">Tamamlandı<i class="bx bxs-edit"></i></a>
                                <a class="btn btn-danger btn-sm" data-id="@item.OrderID" asp-controller="Order" asp-action="UpdateStatusCancel" asp-route-orderId="@item.OrderID">İptal<i class="bx bx-minus-circle"></i></a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>