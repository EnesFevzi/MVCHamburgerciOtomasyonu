        <li>
            <div class="dropdown-divider"></div>
        </li>
        <li>
            <a asp-area="Admin" asp-controller="User" asp-action="Profile" class="dropdown-item">
                <i class="bx bx-user me-2"></i>
                <span class="align-middle">Profilim</span>
            </a>
        </li>
        <li>
            <div class="dropdown-divider"></div>
        </li>
        <li>
            <a class="dropdown-item" asp-area="Admin" asp-controller="Auth" asp-action="Logout">
                <i class="bx bx-power-off me-2"></i>
                <span class="align-middle">Çıkış yap</span>
            </a>
        </li>
